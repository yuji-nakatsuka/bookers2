
 <%= render 'users/header' %>


<div class="body">
      <div class="container">

        <p id="notice">Signed in successfully.</p>


      	<div class="row">

<%= render 'users/sidebar', users: @book %>

  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td><% link_to user_path(@user) do %>
          <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon">
          <% end %>
      </td>
       <td><%= link_to book.title, book_path(book.id) %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>

     <%= render 'users/footer' %>