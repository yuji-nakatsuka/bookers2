<div class="body">

<%= render "users/header" %>

<div class="container">

        <p id="notice">Signed in successfully.</p>


      	<div class="row">

<%= render 'users/sidebar', users: @book %>

  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td><% link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class:"attachment user profile_image fallback" %>

          <% end %>
      </td>
       <td><%= link_to book.title, book_path(book.id) %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>

</div>

     <%= render 'users/footer' %>

  </div>